Sub stocks():

For Each ws In Worksheets
    ws.Cells(1, 9).Value = "Ticker"
    ws.Cells(1, 10).Value = "Yearly Change"
    ws.Cells(1, 11).Value = "Percent Change"
    ws.Cells(1, 12).Value = "Total Stock Volume"
    
    ws.Cells(1, 16).Value = "Ticker"
    ws.Cells(1, 17).Value = "Value"
    ws.Cells(2, 15).Value = "Greatest % Increase"
    ws.Cells(3, 15).Value = "Greatest % Decrease"
    ws.Cells(4, 15).Value = "Greatest Total Volume"
    
Dim i As Long
Dim ticker As String
Dim price_open As Double
Dim Volume As Double
Volume = 0
Dim price_final As Double
price_final = 0
Dim percentChange As Double
Dim ticker_row As Long
ticker_row = 2
Dim last_row As Long
last_row = ws.Cells(Rows.Count, 1).End(xlUp).Row

For i = 2 To last_row
price_open = ws.Cells(ticker_row, 3).Value

    If ws.Cells(i + 1, 1).Value <> ws.Cells(i, 1).Value Then
        ticker = ws.Cells(i, 1).Value
        ws.Range("I" & ticker_row).Value = ticker
    
        price_final = price_final + (ws.Cells(i, 6).Value - price_open)
        ws.Range("J" & ticker_row).Value = price_final
    
        percentChange = (price_final / price_open)
        ws.Range("K" & ticker_row).Value = percentChange
        ws.Range("K" & ticker_row).Style = "Percent"
        
        Volume = Volume + ws.Cells(i, 7).Value
        ws.Range("L" & ticker_row).Value = Volume
        
        ticker_row = ticker_row + 1
        price_final = 0
        Volume = 0
        price_open = ws.Cells(ticker_row, 3).Value
    Else
        Volume = Volume + ws.Cells(i, 7).Value
    End If
Next i

Dim years_lastrow As Long
years_lastrow = ws.Cells(Rows.Count, 10).End(xlUp).Row

For i = 2 To years_lastrow

    If ws.Cells(i, 10).Value >= 0 Then
        ws.Cells(i, 10).Interior.ColorIndex = 4
    Else
        ws.Cells(i, 10).Interior.ColorIndex = 3
    End If
Next i
    
Dim percen_lastrow As Long
percent_lastrow = ws.Cells(Rows.Count, 11).End(xlUp).Row
Dim percent_max As Double
the_max = 0
Dim percent_min As Double
the_min = 0

For i = 2 To percent_lastrow

    If the_max < ws.Cells(i, 11).Value Then
        the_max = ws.Cells(i, 11).Value
        ws.Cells(2, 17).Value = the_max
        ws.Cells(2, 17).Style = "Percent"
        ws.Cells(2, 16).Value = ws.Cells(i, 9).Value
    ElseIf the_min > ws.Cells(i, 11).Value Then
        the_min = ws.Cells(i, 11).Value
        ws.Cells(3, 17).Value = the_min
        ws.Cells(3, 17).Style = "Percent"
        ws.Cells(3, 16).Value = ws.Cells(i, 9).Value
    End If
Next i

Dim vol_row As Long
vol_row = ws.Cells(Rows.Count, 12).End(xlUp).Row
Dim vol_max As Double
vol_max = 0

For i = 2 To total_volrow

    If vol_max < ws.Cells(i, 12).Value Then
        vol_max = ws.Cells(i, 12).Value
        ws.Cells(4, 17).Value = vol_max
        ws.Cells(4, 16).Value = ws.Cells(i, 9).Value
    End If
Next i
    
Next ws

End Sub